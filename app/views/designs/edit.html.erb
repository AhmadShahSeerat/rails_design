<h1> EDIT A DESIGN </h1>

<%= render partial: 'errors/errors', locals: {model: @design} %>
<%= form_with(model: @design) do |f| %>
   <%= f.label :title %>
    <%= f.text_field :title %><br>
    <%= f.label :description %>
    <%= f.text_field :description %><br>
    <%= f.label :design_url %>
    <%= f.text_field :design_url %><br>
    <%= f.submit 'Update design' %>
<% end %>
<%= link_to "DELETE design", design_path(@design), method: "delete" %>